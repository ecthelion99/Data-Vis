{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percentage of Renewable Energy Over Time by State",
  "data": {
    "url": "https://raw.githubusercontent.com/ecthelion99/Data-Vis/refs/heads/master/data/australian_energy_states.csv"
  },
  "transform": [
    {
      "filter": "datum.Energy_Source === 'total' || datum.Energy_Source === 'renewable_total'"
    },
    {
      "pivot": "Energy_Source",
      "value": "Value",
      "groupby": ["Year", "State"]
    },
    {
      "calculate": "datum.renewable_total / datum.total * 100",
      "as": "Renewable_Percentage"
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Renewable_Percentage",
          "type": "quantitative",
          "title": "Percentage of Renewable Energy"
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "State"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 40
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Renewable_Percentage",
          "type": "quantitative"
        },
        "color": {
          "field": "State",
          "type": "nominal"
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Renewable_Percentage", "type": "quantitative", "title": "Percentage of Renewable Energy"}
        ]
      }
    },
    {
      "mark": "rule",  /* Annotation rule line */
      "encoding": {
        "y": {
          "datum": 82  /* 82% line for the target */
        },
        "color": { "value": "red" },  /* Line color */
        "size": { "value": 0.5 }  /* Line thickness */
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontWeight": "lighter",  /* Make text lighter */
        "fontSize": 10  /* Adjust font size as needed */
      },
      "encoding": {
        "y": {
          "datum": 82  /* Align with the 82% rule line */
        },
        "text": { "value": "2030 renewables target" },  /* Annotation text */
      }
    }
  ]
}
